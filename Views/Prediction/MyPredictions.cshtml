@model IEnumerable<FootballBetting.Models.Prediction>

@{
    ViewData["Title"] = "My Predictions";
}

<div class="row">
    <div class="col-md-12">
        <h1><i class="fas fa-list"></i> My Predictions</h1>
        <p class="lead">Track all your predictions and earned points.</p>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th><i class="fas fa-calendar"></i> Date</th>
                            <th><i class="fas fa-futbol"></i> Match</th>
                            <th><i class="fas fa-chart-line"></i> Prediction</th>
                            <th><i class="fas fa-bullseye"></i> Score Prediction</th>
                            <th><i class="fas fa-trophy"></i> Result</th>
                            <th><i class="fas fa-star"></i> Points</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var prediction in Model)
                        {
                            <tr>
                                <td>@prediction.Match.MatchDate.ToString("MMM dd, yyyy")</td>
                                <td>
                                    <strong>@prediction.Match.HomeTeam.Name</strong> vs
                                    <strong>@prediction.Match.AwayTeam.Name</strong>
                                </td>
                                <td>
                                    <span class="badge bg-primary">@prediction.PredictedOutcome</span>
                                </td>
                                <td>
                                    <span class="badge bg-info">
                                        @prediction.PredictedHomeScore - @prediction.PredictedAwayScore
                                    </span>
                                </td>
                                <td>
                                    @if (prediction.Match.IsCompleted)
                                    {
                                        <span class="badge bg-success">
                                            @prediction.Match.Result (@prediction.Match.HomeScore - @prediction.Match.AwayScore)
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Pending</span>
                                    }
                                </td>
                                <td>
                                    @if (prediction.IsProcessed)
                                    {
                                        <span class="badge @(prediction.PointsEarned > 0 ? "bg-success" : "bg-danger") fs-6">
                                            @prediction.PointsEarned
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">TBD</span>
                                    }
                                </td>
                            </tr>
                        }
                </tbody>
            </table>
        </div>

        <!-- Summary Section -->
        <div class="row mt-3">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="fas fa-chart-bar"></i> Summary
                        </h5>
                        <div class="row text-center">
                            <div class="col-md-3">
                                <h4 class="text-primary">@Model.Count()</h4>
                                <small>Total Predictions</small>
                            </div>
                            <div class="col-md-3">
                                <h4 class="text-success">
                                    @Model.Where(p => p.IsProcessed).Sum(p => p.PointsEarned)
                                </h4>
                                <small>Total Points</small>
                            </div>
                            <div class="col-md-3">
                                <h4 class="text-info">
                                    @Model.Count(p => p.IsProcessed && p.PointsEarned > 0)
                                </h4>
                                <small>Successful Predictions</small>
                            </div>
                            <div class="col-md-3">
                                <h4 class="text-warning">
                                    @(Model.Count(p => p.IsProcessed) > 0
                                                                        ? Math.Round(
                                                                        (double)Model.Count(p => p.IsProcessed && p.PointsEarned > 0) /
                                                                        Model.Count(p => p.IsProcessed) * 100, 1)
                                                                        : 0)%
                                    </h4>
                                    <small>Success Rate</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <i class="fas fa-info-circle"></i> You haven't made any predictions yet.
                <a asp-action="Index" class="btn btn-primary btn-sm ms-2">
                    <i class="fas fa-chart-line"></i> Make Your First Prediction
                </a>
            </div>
        }
    </div>
</div>
