@model IEnumerable<FootballBetting.Models.Match>
@{
    ViewData["Title"] = "Make Predictions";
    var userPredictions = ViewBag.UserPredictions as List<FootballBetting.Models.Prediction>;
}

<div class="row">
    <div class="col-md-12">
        <h1><i class="fas fa-chart-line"></i> Make Predictions</h1>
        <p class="lead">Select matches to make your predictions and earn points!</p>
    </div>
</div>

<div class="row">
    @if (Model.Any())
    {
        @foreach (var match in Model)
        {
            var userPrediction = userPredictions?.FirstOrDefault(p => p.MatchId == match.Id);

            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 @(userPrediction != null ? "border-success" : "")">
                    <div
                        class="card-header @(userPrediction != null ? "bg-success text-white" : "bg-primary text-white") text-center">
                        <h6 class="mb-0">
                            <i class="fas fa-clock"></i> @match.MatchDate.ToString("MMM dd, yyyy - HH:mm")
                        </h6>
                        @if (userPrediction != null)
                        {
                            <small><i class="fas fa-check"></i> Prediction Made</small>
                        }
                    </div>
                    <div class="card-body text-center">
                        <div class="row align-items-center">
                            <div class="col-4">
                                <h6 class="mb-1">@match.HomeTeam.Name</h6>
                                <small class="text-muted">Home</small>
                            </div>
                            <div class="col-4">
                                <h4 class="text-primary">VS</h4>
                            </div>
                            <div class="col-4">
                                <h6 class="mb-1">@match.AwayTeam.Name</h6>
                                <small class="text-muted">Away</small>
                            </div>
                        </div>

                        @if (userPrediction != null)
                        {
                            <div class="mt-3">
                                <div class="alert alert-success">
                                    <small>
                                        <strong>Your Prediction:</strong><br>
                                        Outcome: @userPrediction.PredictedOutcome<br>
                                        Score: @userPrediction.PredictedHomeScore - @userPrediction.PredictedAwayScore
                                    </small>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="card-footer text-center">
                        @if (userPrediction == null)
                        {
                            <a asp-action="Create" asp-route-matchId="@match.Id" class="btn btn-primary btn-sm">
                                <i class="fas fa-chart-line"></i> Make Prediction
                            </a>
                        }
                        else
                        {
                            <span class="badge bg-success">
                                <i class="fas fa-check"></i> Prediction Submitted
                            </span>
                        }
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="alert alert-info">
                <i class="fas fa-info-circle"></i> No matches available for predictions at the moment.
            </div>
        </div>
    }
</div>
