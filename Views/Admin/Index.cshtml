@model IEnumerable<FootballBetting.Models.Match>
@{
    ViewData["Title"] = "Admin - Manage Matches";
}

<div class="row">
    <div class="col-md-12">
        <h1><i class="fas fa-cog"></i> Admin Panel - Manage Matches</h1>
        <p class="lead">Update match results and process predictions.</p>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th><i class="fas fa-calendar"></i> Date</th>
                            <th><i class="fas fa-futbol"></i> Match</th>
                            <th><i class="fas fa-trophy"></i> Result</th>
                            <th><i class="fas fa-users"></i> Predictions</th>
                            <th><i class="fas fa-cogs"></i> Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var match in Model)
                        {
                            <tr class="@(match.IsCompleted ? "table-success" : "")">
                                <td>@match.MatchDate.ToString("MMM dd, yyyy - HH:mm")</td>
                                <td>
                                    <strong>@match.HomeTeam.Name</strong> vs <strong>@match.AwayTeam.Name</strong>
                                </td>
                                <td>
                                    @if (match.IsCompleted)
                                    {
                                        <span class="badge bg-success">
                                            @match.HomeScore - @match.AwayScore (@match.Result)
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Pending</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-info">@match.Predictions.Count()</span>
                                </td>
                                <td>
                                    @if (!match.IsCompleted)
                                    {
                                        <a asp-action="UpdateResult" asp-route-id="@match.Id" class="btn btn-primary btn-sm">
                                            <i class="fas fa-edit"></i> Update Result
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-success">
                                            <i class="fas fa-check"></i> Completed
                                        </span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <i class="fas fa-info-circle"></i> No matches found.
            </div>
        }
    </div>
</div>